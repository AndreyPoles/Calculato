<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#A4131212"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="10pt">

            <TextView
                android:id="@+id/myScreen"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="0pt"
                android:layout_marginTop="2pt"
                android:layout_marginRight="0pt"
                android:background="#9BE5EE"
                android:gravity="right"
                android:text="0"
                android:textSize="38sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="9pt"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnSub"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="9pt"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnMult"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="9pt"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt">

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnPoint"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnSqu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="â„–"
                android:textSize="9pt"></Button>>

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="9pt"></Button>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="5pt"
            android:layout_marginTop="3pt"
            android:layout_marginRight="5pt">

            <Button
                android:id="@+id/btnRes"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="C"
                android:textColor="#C9392D"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnMemDel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="M-"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnMem"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:text="M+"
                android:textSize="9pt"></Button>

            <Button
                android:id="@+id/btnEqu"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#FFC107"
                android:text="="
                android:textSize="9pt"></Button>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>